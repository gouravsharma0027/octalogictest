generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VehicleType {
  id       Int       @id @default(autoincrement())
  name     String    @unique                    // e.g., hatchback, suv, sedan, cruiser
  category String
  wheels   Int
  vehicles Vehicle[]
}

model Vehicle {
  id         Int       @id @default(autoincrement())
  name       String                                 // e.g., "Swift", "Thar", "Bullet"
  typeId     Int
  type       VehicleType @relation(fields: [typeId], references: [id])
  bookings   Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  vehicleId  Int
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  firstName  String
  lastName   String
  startDate  DateTime
  endDate    DateTime

  @@index([vehicleId, startDate, endDate]) // for checking overlap efficiently
}
